<style type="text/css">
    body {
        background-image: url('/images/flowers.jpg');
        background-attachment: fixed;
    }
</style>

<h1 class="center_ds">Edit the discussion as you desire.</h1>
<div class="films_d">
    <form method="POST" action="/discussion/<%= discussion.id %>/edit/?_method=PUT" class="c_form">
        <div class="form-group">
            <label for="title">Title</label>
            <input id="title" type="text" name="title" class="form-control" value="<%= discussion.title %>">
        </div>
        <div class="form-group">
            <label for="film">Film</label>
            <input id="film" type="text" name="film" class="form-control" value="<%= discussion.film %>">
            </div>
        <div class="form-group">
            <label for="content">Content</label>
            <textarea id="content" type="text" name="content" class="form-control" rows="4"><%= discussion.content %></textarea>
        </div>
        <div>
            <button class="btn btn-primary" type="submit">Submit Changes</button>
        </div>
    </form>
</div>