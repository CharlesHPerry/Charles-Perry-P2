<h1>Login or Register to join our website!</h1>

<% result.forEach(function(film) { %>
<div class="well"> 
    <h2>
        <a href="/discussion/<%= film.id %>"><%= film.title %></a>
    </h2>
    <p>
        <strong>Released: <%= film.release_date %><br> Rotten Tomatos Score: <%= film.rt_score %></strong>
    </p>
    <form method="POST" action="/film">
        <input hidden type="text" name="title" value="<%= film.title %>">
        <button class="btn btn-primary" type="submit">Add to Favorite Films</button>
    </form>
</div>
<% }) %>
